<section class="py-5">
  <div class="container">
    <div class="row gx-5">
      <aside class="col-lg-6">
        <div class="border rounded-4 mb-3 d-flex justify-content-center">
          <a data-fslightbox="mygalley" class="rounded-4" target="_blank" data-type="image"
            href="{{product.images.[0]}}">
            <img style="max-width: 100%; max-height: 75vh; margin: auto;" class="rounded-4 fit"
              src="{{product.images.[0]}}" />
          </a>
        </div>
        <div class="d-flex justify-content-center mb-3">
          {{#each product.images}}
          <a data-fslightbox="mygalley" class="border mx-1 rounded-2" target="_blank" data-type="image" href="{{this}}"
            class="item-thumb">
            <img width="80" height="80" class="rounded-2" src="{{this}}" />
          </a>
          {{/each}}
        </div>
        <!-- thumbs-wrap.// -->
        <!-- gallery-wrap .end// -->
      </aside>
      <main class="col-lg-6">
        <div class="ps-lg-3">
          <h4 class="title text-dark">
            {{upperCase product.name}}
          </h4>
          <div class="d-flex flex-row my-3">
            <div class="text-warning mb-1 me-2">
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fas fa-star-half-alt"></i>
              <span class="ms-1">
                4.5
              </span>
            </div>

          </div>

          <div class="mb-3">
            <span class="h5" style="color: red;">{{priceSale product.stock.0.price product.sale}}
              {{#each product.stock}}
              {{#if @last}}
              - {{priceSale this.price this.sale}}
              {{/if}}
              {{/each}}</span>
            </br>
            <span class="h5"
              style="font-size: large; text-decoration: line-through; color: rgb(198, 198, 198);">{{priceSale
              product.stock.0.price 0}}
              {{#each product.stock}}
              {{#if @last}}
              - {{priceSale this.price 0}}
              {{/if}}
              {{/each}}</span>

          </div>

          <p>{{product.description}}</p>
          <div class="row">
            <dt class="col-3">Type:</dt>
            <dd class="col-9">{{product.genre}}</dd>

            <dt class="col-3">Size</dt>
            <dd class="col-9">
              {{#each product.stock}}
              {{upperCase this.size }}
              {{/each}}</span>
            </dd>

            <dt class="col-3">Color</dt>
            <dd class="col-9">
              {{#each product.stock}}
              {{upperCase this.color }}
              {{/each}}</span>
            </dd>

            <dt class="col-3">sale</dt>
            <dd class="col-9">{{product.sale}}%</dd>

            <dt class="col-3">sold</dt>
            <dd class="col-9">{{product.sold}}</dd>





          </div>

          <hr />

          {{#if product.status}}
          <a href="/product/changeStatus/{{product._id}}/0" class="btn btn-success shadow-0"> Approve </a>
          {{else}}
          <a href="/product/changeStatus/{{product._id}}/{{product.status}}" class="btn btn-secondary shadow-0 disabled"> Approve </a>
          {{/if}}
          
          {{#if product.status}}
          <a href="#" class="btn btn-secondary shadow-0 disabled">
            <i class="me-1 fa fa-ban"></i>
            Pending
          </a>
          {{else}}
          <a href="/product/changeStatus/{{product._id}}/1" class="btn btn-warning shadow-0">
            <i class="me-1 fa fa-ban"></i>
            Pending
          </a>
          {{/if}}



        </div>
      </main>
    </div>
  </div>
</section>
